TESTS=
  echo 'cd ..'
  echo 'ls -l'
  echo 'cd /usr'
  echo 'ls -l'
[301-END]

[302]
NAME="cd and error messages"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'cd jjjjj'
[302-END]

[303]
NAME="cd -"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'cd /usr'
  echo 'ls -l'
  echo 'cd -'
  echo 'ls -l'
[303-END]

[304]
NAME="cd - without OLDPWD"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'unsetenv OLDPWD'
  echo 'ls -l'
  echo 'cd -'
  echo 'ls -l'
[304-END]

[305]
NAME="cd home"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'cd'
  echo 'ls -l'
[305-END]

[306]
NAME="cd home without HOME"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'unsetenv HOME'
  echo 'cd'
  echo 'ls-l'
[306-END]

********************************************
       SPACE AND TAB FORMATTING TEST
********************************************

[401]
NAME="space 1"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo -e "ls        -a                 -l             /usr"
[401-END]

[402]
NAME="many tab and space"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo -e "  \t\t    ls\t     \t-l    \t\t  \t -a      /t  /usr   \t\t"
[402-END]



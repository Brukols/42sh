CLEAN=""
TESTS=
  echo 'lzz || echo yes'
[702-END]

[703]
NAME="Testing || and &&"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls || echo no && echo yes'
[703-END]


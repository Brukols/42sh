TESTS=
  echo './src/tst.42sh'
[707-END]

[708]
NAME="Testing local and env variables"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'set a=ls'
  echo '$a $PWD'
  echo 'unset a'
  echo '$a $PWD'
  echo 'set a=ls b=tree PATH=/bin'
  echo '$a'
  echo '$b'
  echo '$PATH'
  echo 'unset a b PATH'
  echo '$a'
  echo '$b'
  echo '$PATH'
[708-END]

[709]
NAME="Inhibitor"
SETUP="export TERM=xterm ; PATH='/bin:/usr/bin'"
CLEAN=""
TESTS=
  echo 'ls \ '
  echo 'mkdir to\ to'
  echo 'rm -rf to\ to'
  echo 'set a=lol\ lol'
  echo '$a'
[709-END]